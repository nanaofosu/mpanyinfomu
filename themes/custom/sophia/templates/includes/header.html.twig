<header>
  <nav class="container-fluid topnav navbar navbar-collapse">
    <div class="container">
      <a class="" href="https://www.uchicago.edu/" id="uchicago">The University of Chicago</a>
      <!-- <ul class="nav navbar-nav navbar-right"> <li id="s"> <a href="/search/" id="search-trigger" class="ss-icon">Search</a> </li> </ul> -->

      <a class="user-login-link" href="/user">Log in</a>
      {% if logged_in %}
        <span class="user-account-span">
          <a href="/user" class="d-flex">
            <span class="">
              <i class="fas  fa-sign-out-alt"></i>
            </span>
            <span class="d-none d-md-block ml-3">Log out</span>
          </a>
        </span>
      {% endif %}

      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
  </nav>
  <form id="sitesearch" class="search-bar expanded" method="get" action="/search" role="search">
    <div class="search-bar-inner">
      <div class="wrap">
        <label for="searchtext" class="search-bar-help">Enter Search Below</label>
        <input type="text" name="q" id="searchtext" class="search-field" value="" autocomplete="on" placeholder="Search&#8230;">
        <button type="submit" class="search-submit ss-icon">Search</button>
      </div>
    </div>
  </form>

  <div class="container">
    <div class="wordmark" role="navigation">
      {% if logged_in %}
        <div class="d-flex justify-content-between">
            {#Uchicago Wordmark#}
            <div class="portal-logo">
              <a href="/">Symptpom to Diagnosis</a>
            </div>
            {# Home Icon#}
            <div>
              <a href="/"><i class="fas fa-home fa-2x"></i></a>
            </div>
            {# Topics dropdown#}
            <div class="dropdown show">
              <a class="btn dropdown-toggle" href="#" role="button" id="browseSymptomDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Browse Topics
              </a>
              <div class="dropdown-menu" aria-labelledby="browseSymptomDropdownMenuLink">
                {{ drupal_view('s2d_dashboard', 'block_1') }}
              </div>
            </div>
            {# Custom links#}
            <div>
              <a href="/resources">Resources</a>
            </div>
        </div>
      {% else %}
      <div class="logo">
        <a href="/">Symptpom to Diagnosis</a>
      </div>
      {% endif %}

    </div>
  </div>
  {{ page.primary_menu }}
</header>
<!-- Header section -->
